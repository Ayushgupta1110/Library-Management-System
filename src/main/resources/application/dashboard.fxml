                     <TableColumn fx:id="colStudentId" prefWidth="80.0" text="Student ID" />
                     <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
                  </columns>
               </TableView>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
