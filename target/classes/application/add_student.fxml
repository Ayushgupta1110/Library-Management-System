<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.AddStudentController"
      spacing="10.0">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <children>
        <Label text="Add New Student" style="-fx-font-size: 18px;"/>

        <HBox spacing="10.0">
            <children>
                <Label text="Name:" minWidth="80.0"/>
                <TextField fx:id="nameField" promptText="Enter student name"/>
            </children>
        </HBox>

        <HBox spacing="10.0">
            <children>
                <Label text="ID:" minWidth="80.0"/>
                <TextField fx:id="idField" promptText="Enter numeric ID"/>
            </children>
        </HBox>

        <HBox spacing="10.0">
            <children>
                <Label text="Course:" minWidth="80.0"/>
                <TextField fx:id="courseField" promptText="Enter course"/>
            </children>
        </HBox>

        <HBox spacing="10.0">
            <children>
                <Label text="Session:" minWidth="80.0"/>
                <TextField fx:id="sessionField" promptText="Enter session (e.g. 2024)"/>
            </children>
        </HBox>

        <HBox alignment="CENTER">
            <children>
                <Button text="Add Student" onAction="#addStudent"/>
            </children>
        </HBox>
    </children>
</VBox>
